// The API isBadVersion is defined for you.
// bool isBadVersion(int version);

class Solution {
public:
    int firstBadVersion(int n) {
        int left = 1, right = n;
        while (left < right) {
            int mid = left + (right - left) / 2;
            if (isBadVersion(mid)) {
                right = mid; // bad version found, move left boundary
            } else {
                left = mid + 1; // move right boundary
            }
        }
        return left; // or right (both are same)
    }
};

